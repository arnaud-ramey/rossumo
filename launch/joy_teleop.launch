<launch>
<!--
  Driver for the logitech rumblepad2 joystick.

  Use the D pad while pressing and holding the left trigger button (5) to control.
-->
<node pkg="joy" type="joy_node" name="joy" output="screen" >
  <param name="dev" value="/dev/input/js1" />
  <param name="autorepeat_rate" value="25" />
</node>

<!-- https://github.com/turtlebot/turtlebot/blob/indigo/turtlebot_teleop/src/turtlebot_joy.cpp -->
<!--
<node pkg="turtlebot_teleop" type="turtlebot_teleop_joy" name="turtlebot_teleop_joystick">
  <param name="scale_linear" value=".5"/>
  <param name="scale_angular" value="10"/>
  <remap from="turtlebot_teleop_joystick/cmd_vel" to="/rossumo/speed"/>
</node>
-->
<node pkg="rossumo" type="sumo_teleop_joy.py" name="teleop" output="screen">
  <param name="axis_linear" value="1"/>
  <param name="axis_angular" value="0"/>
  <param name="scale_linear" value=".5"/>
  <param name="scale_angular" value="15"/>
  <remap from="/cmd_vel" to="/rossumo/speed"/>
</node>
</launch>
